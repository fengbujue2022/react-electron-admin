{
  "compilerOptions": {
    "paths": {
      "@react-electron-admin/*": [
        "./packages/*/src"
      ]
    },
    "composite": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "ESNext"
    ]
  },
}